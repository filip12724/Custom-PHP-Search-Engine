<script>
  window.addEventListener("message", receiveMessage, false);
  function receiveMessage(event)
  {
      var data = event.data;
      //console.log(event.data);
      if (typeof data['_message'] === 'undefined' || data['_message'] !== 'form_success') return;
      window.location.href = document.getElementById(data['formID']).getAttribute('returnURL');
  }
</script>

