            infinite: true,
            dots: false,
            slidesToScroll: 1,
            autoplay: false,
            autoplaySpeed: 2000,
            slidesToShow: numberOfSlides < 5 ? numberOfSlides : 5,
            responsive: [
                {
                    breakpoint: 1200,
                    settings: {
                        slidesToShow: 4,
                    }
                },
                {
                    breakpoint: 992,
                    settings: {
                        slidesToShow: 3,
                    }
                },
