<script>
    $(document).ready(function(){
  
          setTimeout(showModal,500);
  
          function showModal(){  
              var is_already_show = sessionStorage.getItem('popupDisplayed');
              if(is_already_show != 'already shown'){
                  $('.popup-overlay').show();
                  sessionStorage.setItem('popupDisplayed', 'already shown')
                }else{
              }
          }
  
          $('.popup-close').click(function(){
              $('.popup-overlay').hide();
          });
  
      });
  </script>
<style type="text/css">.ccm-page .popup-overlay{background:rgba(0,0,0,0.70); position:fixed; left:0; top:0; width:100%; height:100%; display: none; z-index:9999999999;}
      .ccm-page .popup-overlay .popup{display: table; width: 100%; height: 100%; vertical-align: middle; text-align: center;}
      .ccm-page .popup-overlay .popup-img{vertical-align: middle; display: table-cell;}
      .ccm-page .popup-overlay .popup-img img{display: inline-block; max-width:800px; border: 2px solid #fff;}
      .ccm-page .popup-overlay .popup-close{width: 36px; display: inline-block; cursor:pointer;margin-left: 10px; vertical-align: top; height: 36px; background: #fff; border-radius: 50%; line-height: 36px; font-size: 18px; font-weight: bold; text-align: center;}
      @media only screen and (max-width:576px){
          .ccm-page .popup-overlay .popup-close {width: 24px; height: 24px; line-height: 24px; font-size: 12px;}
          .ccm-page .popup-overlay .popup-img img{border:2px solid #fff; max-width:70%;}
      }
</style>
